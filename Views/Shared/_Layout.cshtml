<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Salud Linux</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sprint_final_salud_linux.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="sidebar d-flex flex-column p-3 shadow-lg">
        <a class="navbar-brand mb-4 fw-bold text-white text-center" 
           asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-heartbeat me-2"></i> Salud Linux
        </a>
        <ul class="nav nav-pills flex-column gap-2">
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" 
                   asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-users-cog me-2"></i> Admin
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" target="_blank" 
                   asp-area="" asp-controller="Admin" asp-action="TurnView">
                    <i class="fas fa-users-cog me-2"></i> Turnos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" target="_blank" 
                   asp-area="" asp-controller="Turn" asp-action="RequestTurn">
                    <i class="fas fa-users-cog me-2"></i> Solicitar Turno
                </a>
            </li>
            <li class="nav-item">
                <form asp-controller="Admin" asp-action="TurnView" method="post">
                    <button type="submit" class="btn btn-success">Llamar siguiente</button>
                </form>
            </li>
            <li class="nav-item">
                <a class="btn btn-danger"
                   asp-area="" asp-controller="Admin" asp-action="ResetTurns">Reiniciar Turnos
                </a>
            </li>
        </ul>
    </nav>
    
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="footer">
            <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="text-white mb-2 mb-md-0">
                    <i class="fas fa-clinic-medical me-2"></i> 
                    &copy; 2025 - Salud Linux
                </div>
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">
                        <i class="fas fa-shield-alt me-1"></i> Privacidad
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Help" class="footer-link ms-3">
                        <i class="fas fa-info-circle me-1"></i> Ayuda
                    </a>
                </div>
            </div>
        </footer>


    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    window.tempData = {
        message: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["message"] ?? "")),
        error: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["error"] ?? ""))
    };
    </script>
    <script src="~/js/Admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>