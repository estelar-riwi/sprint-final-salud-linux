<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Salud Linux</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sprint_final_salud_linux.styles.css" asp-append-version="true" />

    <style>
        /* Barra lateral fija */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 220px;
            background-color: #f8f9fa; /* bg-light */
            border-right: 1px solid #ddd;
            padding-top: 1rem;
        }

        .sidebar .nav-link {
            color: #333;
            margin-bottom: .5rem;
        }

        .sidebar .nav-link:hover {
            background-color: #e9ecef;
            border-radius: .25rem;
        }

        /* Empujar el contenido principal */
        .content {
            margin-left: 220px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar d-flex flex-column p-3">
        <a class="navbar-brand mb-3 fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
            Salud Linux
        </a>
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
            </li>
        </ul>
    </nav>

    <!-- Contenido principal -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted mt-4">
            <div class="container">
                &copy; 2025 - sprint_final_salud_linux -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

