@model IEnumerable<sprint_final_salud_linux.Models.User>

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color: #007bff;">
            <i class="fas fa-hospital-user me-2"></i> Gesti√≥n de Afiliados
        </h2>
        <p class="text-muted">Administra los afiliados activos e inactivos del sistema</p>
    </div>

    <!-- üîπ Botones de filtro -->
    <div class="text-center mb-4">
        <a asp-action="Index" asp-controller="Admin"
           class="btn @(ViewBag.Showing == "Activos" ? "btn-primary text-white" : "btn-outline-primary") rounded-pill px-4 mx-2">
            <i class="fas fa-user-check me-1"></i> Activos
        </a>
        <a asp-action="InactiveList" asp-controller="Admin"
           class="btn @(ViewBag.Showing == "Inactivos" ? "btn-secondary text-white" : "btn-outline-secondary") rounded-pill px-4 mx-2">
            <i class="fas fa-user-slash me-1"></i> Inactivos
        </a>
        <a asp-action="Create" asp-controller="Admin"
           class="btn btn-success rounded-pill px-4 mx-2">
            <i class="fas fa-user-plus me-1"></i> Nuevo Afiliado
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-white border-0 text-center py-3">
            <h5 class="fw-bold mb-0 text-primary">
                <i class="fas fa-users me-2"></i> Lista de Afiliados ‚Äî 
                <span class="text-dark">@ViewBag.Showing</span>
            </h5>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle table-hover mb-0">
                    <thead style="background-color: #f8f9fa;">
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Foto</th>
                            <th>Nombre</th>
                            <th>Identificaci√≥n</th>
                            <th>Tel√©fono</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-info-circle me-1"></i> No hay afiliados en esta lista
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var user in Model)
                            {
                                <tr class="text-center">
                                    <td>@user.Id</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.Picture))
                                        {
                                            <img src="@user.Picture"
                                                 class="rounded-circle shadow-sm zoomable-photo"
                                                 style="width:45px; height:45px; object-fit:cover; cursor:pointer;"
                                                 data-bs-toggle="modal"
                                                 data-bs-target="#photoModal"
                                                 data-photo="@user.Picture"
                                                 data-name="@user.Name" />
                                        }
                                        else
                                        {
                                            <i class="fas fa-user-circle fa-2x text-secondary"></i>
                                        }
                                    </td>
                                    <td>@user.Name</td>
                                    <td>@user.Identification</td>
                                    <td>@user.Phone</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-primary me-1" title="Editar"
                                           asp-action="Edit" asp-route-id="@user.Id">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="ToggleStatus" asp-route-id="@user.Id"
                                           class="btn btn-sm @(user.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                           title="@(user.IsActive ? "Desactivar" : "Activar")">
                                            <i class="fas @(user.IsActive ? "fa-user-slash" : "fa-user-check")"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
